<?xml version="1.0" encoding="utf-8"?>



    <resources>
        <!-- Base theme for the entire application -->
        <style name="Theme.Firebase_Journal_App" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
            <item name="colorPrimary">#3B5E3D</item>
            <item name="colorPrimaryVariant">#3B5E3D</item>
            <item name="colorOnPrimary">#3B5E3D</item>
            <item name="colorSecondary">@color/teal_200</item>
            <item name="colorSecondaryVariant">@color/teal_700</item>
            <item name="colorOnSecondary">@color/black</item>
        </style>

        <!-- Theme with no action bar for IntroActivity -->
        <style name="Theme.Firebase_Journal_App.NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
            <item name="colorPrimary">#3B5E3D</item>
            <item name="colorPrimaryVariant">#3B5E3D</item>
            <item name="colorOnPrimary">@color/white</item>
            <item name="colorSecondary">@color/teal_200</item>
            <item name="colorSecondaryVariant">@color/teal_700</item>
            <item name="colorOnSecondary">@color/black</item>
            <item name="android:windowLightStatusBar">true</item>
        </style>
    <!-- Custom EditText Style -->
    <style name="CustomEditText">
        <item name="android:background">@drawable/edit_text_background</item>
        <item name="android:padding">16dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>

    </style>

    <!-- Button Style -->
    <style name="CustomButton">
        <item name="android:backgroundTint">#506693</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">12dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">20sp</item>
    </style>
    <!-- res/values/styles.xml -->

    <style name="CustomSearchView" parent="Widget.AppCompat.SearchView">
        <item name="android:background">@drawable/rounded_search_view_background</item>
        <item name="android:iconifiedByDefault">false</item>
        <item name="android:queryHint">Search by title</item> <!-- Ensure this is set -->
    </style>


</resources>


